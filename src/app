    except Exception as error:
        raise_error_message (
            error, 
            5,
            "app"
            )
                
if __name__ == "__main__":
    
    try:
        (main())
        
    except(
        KeyboardInterrupt, 
        SystemExit
        ):
        asyncio.get_event_loop().run_until_complete(main().stop_ws())
        

    except Exception as error:
        raise_error_message(
        error, 
        5, 
        "app"
        )
